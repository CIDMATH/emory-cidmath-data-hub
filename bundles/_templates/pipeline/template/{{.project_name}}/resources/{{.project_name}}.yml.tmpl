# {{.project_name}}.yml
# The {{.project_name}} pipeline

resources:
  pipelines:
    {{.project_name}}:
      name: {{.project_name}}
      clusters:
        - label: default
          node_type_id: ${var.node_type_very_small}
          autoscale:
            min_workers: 1
            max_workers: 5
            mode: ENHANCED
      libraries:
        - notebook:
            path: ../src/{{.project_name}}.ipynb
      schema: ${var.schema}
      catalog: ${var.catalog}